<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tanju.balloon.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" /> 
 

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tanju.balloon.game.Splash"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_airplane_game"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tanju.balloon.game.MenuActivity"
            		android:screenOrientation="portrait" >
        </activity>
         <activity android:name="com.tanju.balloon.game.OptionsActivity" 
             		android:screenOrientation="portrait">
        </activity>
         <activity android:name="com.tanju.balloon.game.InstructionsActivity" 
             		android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.tanju.balloon.game.HighScoresActivity" 
             		android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.tanju.balloon.game.GameOverActivity" 
             		android:screenOrientation="portrait">
        </activity>
        <service android:name=".VibrateService"/>
         
        <activity
            android:name="com.tanju.balloon.game.AngryPigGameActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_airplane_game"
            android:screenOrientation="landscape"
            >


        </activity>
    </application>

</manifest>